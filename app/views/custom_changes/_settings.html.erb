<h3><%= l(:label_settings) %></h3>
<p>
  <label for="custom_field_date_id"><%= l(:custom_field_date_id) %>:</label>
  <%= select_tag 'settings[custom_field_date_id]', options_from_collection_for_select(CustomField.where(field_format: 'date'), 'id', 'name', @settings['custom_field_date_id'].to_i) %>
</p>
<p>
  <label for="custom_user_field_id"><%= l(:custom_user_field) %>:</label>
  <%= select_tag 'settings[custom_user_field_id]', options_from_collection_for_select(CustomField.where(field_format: 'user'), 'id', 'name', @settings['custom_user_field_id'].to_i) %>
</p>
<p>
  <label for="group_name"><%= l(:group_name) %>:</label>
<!--  <%#= select_tag 'settings[group_nameÐ¼]', options_from_collection_for_select(CustomField.where(field_format: 'user'), 'id', 'name', @settings['group_name'].to_i) %>-->
  <%= select_tag 'settings[group_name]', options_from_collection_for_select(Group.all, 'id', 'lastname', @settings['group_name'].to_i) %>
</p>
<p>
  <label for="check_subtask"><%= l(:check_subtask) %>:</label>
  <%= check_box_tag 'settings[check_subtask]', '1', @settings['check_subtask'] %>

</p>